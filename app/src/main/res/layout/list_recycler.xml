<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginBottom="4dp"
    android:outlineSpotShadowColor="@color/black"
    android:background="#2800BCD4">

    <TextView
        android:id="@+id/title_recycler"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="18"
        tools:text="Tilte"
        android:textColor="@color/black"
        android:textSize="32sp"
        />
    <TextView
        android:id="@+id/textDate_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="21/2/20"
        android:layout_toStartOf="@id/delete_button_list"
        android:layout_margin="8dp"
        />

    <ImageView
        android:id="@+id/delete_button_list"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_baseline_delete_24"
        />
    <TextView
        android:id="@+id/text_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="TextTextText"
        android:layout_below="@+id/title_recycler"
        android:textSize="20sp"
        android:maxLines="3"
        android:layout_marginTop="8dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="4sp"
        android:background="#28000000"
        android:layout_below="@id/text_recycler"/>



</RelativeLayout>